<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fga.mds.gpp.trezentos.View.LoginActivity"
    android:background="@drawable/backgroundtrezentos"
    >

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/logo_image"
        android:src="@drawable/trezentoslogo"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"

        android:background="@drawable/selector_button"
        android:text="@string/btn_login"
        android:textColor="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_password" />

    <Button
        android:id="@+id/button_register"
        android:background="@android:color/transparent"
        android:text="@string/btn_login_to_sign_up"
        android:textColor="#6000"
        android:textSize="13sp"

        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"

        app:layout_constraintLeft_toRightOf="@+id/button_forgot_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.944"/>

    <Button
        android:id="@+id/button_forgot_password"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"

        android:background="@android:color/transparent"
        android:text="@string/btn_forgot_password"
        android:textColor="#6000"

        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/button_about"
        android:background="@android:color/transparent"
        android:text="Sobre"
        android:textColor="#6000"
        android:textSize="13sp"

        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        android:layout_marginTop="6dp"/>

   <com.facebook.login.widget.LoginButton
       android:id="@+id/button_sign_in_facebook"
       android:layout_width="355dp"
       android:layout_height="40dp"
       facebook:com_facebook_login_text="@string/btn_fb_login"
       android:background="@drawable/selector_button"
       android:paddingBottom="11dp"
       android:paddingTop="11dp"
       android:textColor="#FFFFFF"
       android:textSize="13sp"

       android:layout_marginTop="11dp"
       app:layout_constraintTop_toBottomOf="@+id/button_login"
       android:layout_marginRight="8dp"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginLeft="8dp"
       app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="@string/txt_password"
        android:inputType="textPassword"

        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="@string/txt_email"
        android:inputType="textEmailAddress"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/logo_image" />

</android.support.constraint.ConstraintLayout>
