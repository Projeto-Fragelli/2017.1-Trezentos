<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fga.mds.gpp.trezentos.View.EditClassActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/text_view_class_name"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:hint="Nome da Sala:"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_class_name_x"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:hint="nome da sala X"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/text_view_institution"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:hint="Instituição:"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_institution_x"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:hint="instituição x"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_class_password"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:hint="Senha Sala:"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_class_password_x"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:hint="senha Sala x"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_cut_grade"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:hint="Nota de Corte:"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_cut_grade_x"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:hint="Nota de Corte:"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_size_groups"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:hint="Tamanho dos Grupos:"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_size_groups_x"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:hint="tamanho dos grupos x"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_addition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Acréscimo:"
        android:layout_marginLeft="40dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text_view_addition_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Acréscimo:"
        android:layout_marginLeft="40dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/cardview_dark_background"
        android:text="Voltar"
        android:textColor="@color/cardview_light_background" />

</LinearLayout>