<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    card_view:cardBackgroundColor="#444444"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_margin="4dp"
    android:weightSum="1"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/avatar"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFF"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Arthur Diniz"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>


            <View
                android:background="#FFF"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="2dp">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"

                >

                <View
                    android:background="#FFF"

                    android:layout_width="2dp"
                    android:layout_height="match_parent">

                </View>


                <LinearLayout
                    android:id="@+id/gradeLayout"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nota"
                        android:layout_gravity="center_vertical"
                        android:textColor="#FFF"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/text_view_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textColor="#FFF"
                        android:textSize="30dp"
                        android:textStyle="bold"
                       />


                </LinearLayout>


                <View
                    android:background="#FFF"

                    android:layout_width="2dp"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/presence"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_presence"
                        android:visibility="gone"
                        android:onClick="onClick"/>

                    <ImageView
                        android:id="@+id/no_presence"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_no_presence"
                        android:onClick="onClick"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>