<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fga.mds.gpp.trezentos.View.CreateClassActivity"
    android:id="@+id/relativeLayout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/create_class_bg"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>


                <!--Inputs-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">


                    <!--Name Class-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="230dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/nameImageView"
                            android:layout_width="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_height="wrap_content"

                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/name"

                            />

                        <EditText
                            android:id="@+id/edit_text_class_name"
                            android:textSize="25dp"
                            android:hint="Nome da Sala"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!--Institution-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/institutionImageView"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"

                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/institution"
                            android:layout_marginTop="30dp" />

                        <EditText
                            android:id="@+id/edit_text_institution"
                            android:textSize="25dp"
                            android:hint="Instituição"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!--Password-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/passImageView"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"

                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/lock"
                            android:layout_marginTop="30dp" />



                        <EditText
                            android:id="@+id/edit_text_class_password"
                            android:textSize="25dp"
                            android:hint="Senha Sala"

                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!--Cut Grade-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gradeImageView"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"

                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/grade"
                            android:layout_marginTop="30dp" />



                        <EditText
                            android:id="@+id/edit_text_cut_grade"
                            android:textSize="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="Nota de Corte"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!--Increase-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/riseImageView"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"

                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/incremento"
                            android:layout_marginTop="30dp" />



                        <EditText
                            android:id="@+id/edit_text_addition"
                            android:textSize="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="Acrécimo"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!--Increase-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/groupImageView"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/group"
                             />



                        <EditText
                            android:id="@+id/edit_text_size_groups"
                            android:textSize="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="Tamanho do Grupo"
                            android:inputType="numberDecimal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/button_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salvar"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/cardview_dark_background"
                        android:textColor="@color/cardview_light_background" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:visibility="gone" />


                </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
