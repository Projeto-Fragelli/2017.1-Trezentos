<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fga.mds.gpp.trezentos.View.LoginActivity"
    android:background="@drawable/backgroundtrezentos">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/logoImage"
        android:src="@drawable/trezentoslogo"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/forgot_pass_text_email"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="@string/txt_email"
        android:inputType="textEmailAddress"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/logoImage" />

    <Button
        android:id="@+id/button_forgot_pass_email"
        android:text="@string/btn_send_to_email"

        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/selector_button"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass_text_email" />

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/button_return_login"
        android:text="@string/btn_return_to_login"
        android:textSize="13sp"
        android:textColor="#6000"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button_forgot_pass_email" />

</android.support.constraint.ConstraintLayout>
